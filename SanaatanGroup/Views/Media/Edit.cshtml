@model SanaatanGroup.Models.Media
@using SanaatanGroup.Models;

@{
    ViewBag.Title = "Edit";
    ApplicationDbContext db = new ApplicationDbContext();

    var heading = db._MediaHeading.OrderBy(m => m.MHeading).ToList();

}


<div class="sectionWrapper">
    <div class="container">
        <div class="row">
            <div class="cell-12 contact-form fx" data-animate="fadeInLeft">
                @using (Html.BeginForm("Edit", "Media", FormMethod.Post, new { @class = "form-horizontal form-bordered", role = "form", encType = "multipart/form-data" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <h4 class="block-head">Update Media</h4>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label">Heading</label>
                        <div class="form-input">
                            @Html.DropDownListFor(model => model.MediaHeadingId, new SelectList(heading, "Id", "MHeading"), "Please Select Heading", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MediaHeadingId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Image Name</label>
                        <div class="form-input">
                            @Html.EditorFor(model => model.ImageName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col_full">
                        @Html.Label("Upload Image", htmlAttributes: new { @class = "control-label " })
                        <input type="file" name="jpeg" id="jpeg" />
                        @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })

                    </div>


                    <div class="form-actions text-right">
                        <input type="submit" value="Save" class="btn btn-primary">
                    </div>
                }

            </div>
        </div>
    </div>
</div>










