@model SanaatanGroup.Models.Event
@{
    ViewBag.Title = "Create";
}

<div class="sectionWrapper">
    <div class="container">
        <div class="row">
            <div class="cell-12 contact-form fx" data-animate="fadeInLeft">
                @using (Html.BeginForm("Event", "Media", FormMethod.Post, new { @class = "form-horizontal form-bordered", role = "form", encType = "multipart/form-data" }))
            {
                    @Html.AntiForgeryToken()
                    <h4 class="block-head">Create Event</h4>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                  

                    <div class="form-group">
                        <label class="control-label">Title</label>
                        <div class="form-input">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Upload Video: </label>
                        <div class="col-md-10">
                            <span><b style="color:red"></span>  @Html.EditorFor(model => model.VideoUrl, new { htmlAttributes = new { @class = "form-control", placeholder = "Upload Youtube Embed link only" } })
                            @Html.ValidationMessageFor(model => model.VideoUrl, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label class="control-label">Description</label>
                        <div class="form-input">
                            @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-actions text-right">
                        <input type="submit" value="Create" class="btn btn-primary">
                    </div>
                }

            </div>
        </div>
    </div>
</div>



