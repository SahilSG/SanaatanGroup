@model SanaatanGroup.Models.Media
@{
    ViewBag.Title = "Delete";
}

<div class="block">
    <div class="block-head">
        <div class="caption">
            <i class="remove"></i>
            <span class="caption-subject font-blue-hoki bold uppercase" style="margin-left:20px">Delete Media</span>


        </div>
    </div>
    <div class="box alter-border boldwide_small_white" style="margin-left:350px; margin-right:600px;">
        <h3 style="font-weight:bold">Are you sure you want to delete this Media?</h3>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="margin-left:100px; margin-bottom:3px; margin-top:30px">
                <input type="submit" value="Delete" class="btn blue" /> |
                <a href="@Url.Action("List","Media")">List</a>
            </div>
        }
    </div>
</div>

