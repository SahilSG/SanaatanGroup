@model SanaatanGroup.Models.MediaHeading
@using SanaatanGroup.Models;
@{
    ViewBag.Title = "Edit";
    ApplicationDbContext db = new ApplicationDbContext();

}


<div class="sectionWrapper">
    <div class="container">
        <div class="row">
            <div class="cell-12 contact-form fx" data-animate="fadeInLeft">
                @using (Html.BeginForm("Edit", "MediaHeading", FormMethod.Post, new { @class = "form-horizontal form-bordered", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <h4 class="block-head">Update Media Heading</h4>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label">Heading</label>
                        <div class="form-input">
                            @Html.EditorFor(model => model.MHeading, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MHeading, "", new { @class = "text-danger" })
                        </div>
                    </div>




                    <div class="form-actions text-right">
                        <input type="submit" value="Save" class="btn btn-primary">
                    </div>
                }

            </div>
        </div>
    </div>
</div>












